<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFBFBF"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_most_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:paddingVertical="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_most_recent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Miles"
                    android:layout_weight="1"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />
                <ImageView
                    android:id="@+id/img_first"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_check"
                    android:visibility="invisible"
                    app:tint="@color/yellow_dark"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hightest_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:paddingVertical="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kilometers"
                    android:layout_weight="1"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />
                <ImageView
                    android:id="@+id/img_second"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:tint="@color/yellow_dark"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_check"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/yellow"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/tv_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>