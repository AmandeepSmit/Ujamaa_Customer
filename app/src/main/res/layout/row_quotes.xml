<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_1sdp"-->
<!--            android:background="@color/color_views"-->
<!--            android:layout_marginVertical="@dimen/_6sdp"/>-->

        <TextView
            android:id="@+id/rq_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Oct 2020"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/rq_resName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipients Name"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_12sdp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/rq_quoteEstimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUOTE/ESTIMATE"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_12sdp"
            android:textColor="@color/color_blue"
            android:layout_marginVertical="@dimen/_3sdp"
            android:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ref No:"
                android:layout_gravity="end"
                android:fontFamily="@font/adobe_clean_regular"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:textColor="@color/color_gray_text"/>


            <TextView
                android:id="@+id/rq_refNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ref No: 123456"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/adobe_clean_regular"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/rq_forArrow"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_arrow_forward"
                android:layout_marginEnd="@dimen/_5sdp"
                app:tint="@color/gray_quotes"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/rq_jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job title"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_12sdp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/rq_workSummery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary of work first 2 lines......."
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_marginVertical="@dimen/_2sdp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="end"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/rq_price"
               android:layout_width="@dimen/_50sdp"
               android:layout_height="wrap_content"
               android:layout_gravity="end"
               android:gravity="end"
               android:layout_marginEnd="@dimen/_5sdp"
               android:fontFamily="@font/adobe_clean_bold"
               android:textSize="@dimen/_13sdp"
               android:textColor="@color/black"/>

           <TextView
               android:id="@+id/rq_vat_info"
               android:layout_width="@dimen/_50sdp"
               android:layout_height="wrap_content"
               android:text="Â£"
               android:layout_gravity="bottom"
               android:layout_marginEnd="@dimen/_10sdp"
               android:fontFamily="@font/adobe_clean_regular"
               android:textSize="@dimen/_8sdp"
               android:textColor="@color/black"/>
       </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/color_views"
            android:layout_marginVertical="@dimen/_5sdp"/>
    </LinearLayout>
</LinearLayout>
