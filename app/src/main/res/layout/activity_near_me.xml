<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    tools:context=".activities.NearMeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:background="@color/yellow_dark"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:tint="@color/black"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_back_arrow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookmarks"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F2F2F2"
                android:visibility="gone"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/nm_back"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:onClick="backBtnCick"
                        android:src="@drawable/ic_back_arrow" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_cat_name_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:text="Hair, Beauty and Grooming Services"
                    android:textColor="#696666"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_near_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center"
                    android:text="Near me"
                    android:visibility="gone"
                    android:fontFamily="@font/adobe_clean_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

           <LinearLayout
               android:id="@+id/layout_search_tab"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:orientation="horizontal"
               android:visibility="gone"
               android:layout_marginTop="@dimen/_10sdp"
               android:gravity="center_horizontal">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="@dimen/_10sdp"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:id="@+id/layout_map"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="@dimen/_3sdp"
                       android:background="#F2F2F2"
                       android:outlineSpotShadowColor="@color/black"
                       android:elevation="@dimen/_4sdp"
                       android:gravity="center"
                       android:orientation="horizontal"
                       android:paddingVertical="@dimen/_7sdp"
                       android:paddingHorizontal="@dimen/_30sdp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_14sdp"
                           android:textColor="@color/black"
                           android:fontFamily="@font/adobe_clean_regular"
                           android:text="Map" />
                   </LinearLayout>
               </LinearLayout>
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/black"
                   android:layout_marginBottom="@dimen/_3sdp"
                   />
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginStart="@dimen/_10sdp"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:id="@+id/layout_filter"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="@dimen/_3sdp"
                       android:background="#F2F2F2"
                       android:outlineSpotShadowColor="@color/black"
                       android:elevation="@dimen/_4sdp"
                       android:gravity="center"
                       android:orientation="horizontal"
                       android:paddingVertical="@dimen/_7sdp"
                       android:paddingHorizontal="@dimen/_30sdp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <TextView
                           android:id="@+id/tv_filterr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/adobe_clean_regular"
                           android:textSize="@dimen/_14sdp"
                           android:textColor="@color/black"
                           android:text="Filter" />
                   </LinearLayout>
               </LinearLayout>

           </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_profile_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_sort"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:layout_weight="0.7"
                    android:background="#A9FFFFFF"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SORT:"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/adobe_clean_bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_color"
                        />
                    <TextView
                        android:id="@+id/tv_sort_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATE ADDED"
                        android:textAllCaps="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/adobe_clean_regular"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:tint="@color/black"
                        android:src="@drawable/ic_drop_arrow"
                        />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="0.3"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:cardBackgroundColor="#F2F2F2"
                    app:cardElevation="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/tv_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Filter"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_7sdp"
                        android:fontFamily="@font/adobe_clean_regular"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#A5A5A5"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_dark"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:orientation="horizontal"
                android:visibility="gone">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_5sdp"
                    tools:listitem="@layout/row_cat_tab"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nm_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
            <TextView
                android:id="@+id/tv_empty_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Business Found!"
                android:textSize="@dimen/_16sdp"
                android:layout_centerInParent="true"
                android:textColor="#C4AA44"
                android:shadowRadius="6"
                android:shadowDx="5"
                android:shadowDy="10"
                android:shadowColor="@color/gray_default"
                android:fontFamily="@font/adobe_clean_regular"
                android:letterSpacing="0.15"
                />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/dialog_cat_filter" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>