<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".fragments.YourReviewsFragment">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/_15sdp"
      >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/adobe_clean_regular"
              android:textColor="@color/black"
              android:gravity="center"
              android:text="Overall, you have posted"
              android:textSize="@dimen/_11sdp" />
          <TextView
              android:id="@+id/posted_count"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/adobe_clean_bold"
              android:textColor="@color/blue"
              android:gravity="center"
              android:text="0"
              android:textSize="@dimen/_11sdp"
              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/adobe_clean_regular"
              android:textColor="@color/black"
              android:gravity="center"
              android:text="reviews"
              android:textSize="@dimen/_11sdp"
              />
      </LinearLayout>

      <View
          android:layout_width="@dimen/_1sdp"
          android:layout_height="match_parent"
          android:background="@color/black"
          android:layout_marginVertical="@dimen/_5sdp"
          />
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/adobe_clean_regular"
              android:textColor="@color/black"
              android:gravity="center"
              android:text="Overall, you have left"
              android:textSize="@dimen/_11sdp"/>
          <TextView
              android:id="@+id/tv_img_reviews"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/adobe_clean_bold"
              android:textColor="@color/blue"
              android:gravity="center"
              android:text="0"
              android:textSize="@dimen/_11sdp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/adobe_clean_regular"
              android:textColor="@color/black"
              android:gravity="center"
              android:text="images with reviews"
              android:textSize="@dimen/_11sdp"/>

      </LinearLayout>
  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        />
    <TextView
        android:id="@+id/usefull_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adobe_clean_regular"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Combining all of your reviews, 0 people have found them useful."
        android:textSize="@dimen/_10sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SORT:"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/adobe_clean_bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/tv_sort_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most recent"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/adobe_clean_bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:tint="@color/black"
                android:src="@drawable/ic_drop_arrow"
                />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_weight="0.3"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardBackgroundColor="#F2F2F2"
            app:cardElevation="@dimen/_3sdp">

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/adobe_clean_regular"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_empty_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Reviews Found !"
            android:textSize="@dimen/_16sdp"
            android:layout_centerInParent="true"
            android:textColor="#C4AA44"
            android:shadowRadius="6"
            android:shadowDx="5"
            android:shadowDy="10"
            android:shadowColor="@color/gray_default"
            android:fontFamily="@font/adobe_clean_regular"
            android:letterSpacing="0.15"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_reviews"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="@dimen/_60sdp"
            android:clipToPadding="false"
            tools:listitem="@layout/row_your_reviews"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>