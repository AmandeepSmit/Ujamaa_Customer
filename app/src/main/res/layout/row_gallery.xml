<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_5sdp">

    <ImageView
        android:id="@+id/rg_Img"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/black"
        android:transitionName="example_transition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="@+id/rg_Img"
        app:layout_constraintEnd_toEndOf="@+id/rg_Img" />



    <ImageView
        android:id="@+id/img_heart"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/like_heart_anim"
        android:transitionName="example_transition"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rg_Img"
        app:layout_constraintEnd_toEndOf="@+id/rg_Img"
        app:layout_constraintStart_toStartOf="@+id/rg_Img"
        app:layout_constraintTop_toTopOf="@+id/rg_Img" />

</androidx.constraintlayout.widget.ConstraintLayout>