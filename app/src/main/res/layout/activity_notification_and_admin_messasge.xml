<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.NotificationAndAdminMessages">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/yellow_dark"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nam_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:tint="@color/black"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/na_TabLayout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        android:paddingTop="@dimen/_8sdp"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorHeight="@dimen/_1sdp"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/gray_default"
        app:tabTextAppearance="@style/TextAppearance_Color_TabWidget"  />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/na_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>