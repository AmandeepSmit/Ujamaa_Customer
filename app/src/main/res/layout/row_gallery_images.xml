<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_7sdp">

    <ImageView
        android:id="@+id/glr_Img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:transitionName="example_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/img_like"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="@+id/glr_Img"
        app:layout_constraintEnd_toEndOf="@+id/glr_Img" />
    <ImageView
        android:id="@+id/img_heart"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/like_heart_anim"
        android:transitionName="example_transition"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/glr_Img"
        app:layout_constraintEnd_toEndOf="@+id/glr_Img"
        app:layout_constraintStart_toStartOf="@+id/glr_Img"
        app:layout_constraintTop_toTopOf="@+id/glr_Img" />

</androidx.constraintlayout.widget.ConstraintLayout>