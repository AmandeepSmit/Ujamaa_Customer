<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ram_sender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/adobe_clean_bold"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ram_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/blue_light"
            android:layout_marginEnd="@dimen/_10sdp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/ram_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/adobe_clean_italic"
        android:paddingStart="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/_2sdp"
        />

    <TextView
        android:id="@+id/ram_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/adobe_clean_regular"
        android:paddingStart="@dimen/_10sdp"
        android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginTop="@dimen/_5sdp">
    </View>

</LinearLayout>