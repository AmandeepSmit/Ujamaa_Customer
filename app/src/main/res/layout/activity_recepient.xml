<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    android:id="@+id/rn_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C4AA44"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/rn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:fontFamily="@font/adobe_clean_bold"
            android:text="Back"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/adobe_clean_bold"
                android:gravity="center"
                android:text="Recipient Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quote"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/adobe_clean_regular"/>
        </LinearLayout>

        <TextView
            android:id="@+id/rn_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/adobe_clean_bold"
            android:text="Edit"
            android:gravity="bottom"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="@dimen/_12sdp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">


        <TextView
            android:id="@+id/rn_quoteEstimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#255CCB"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:textAllCaps="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:id="@+id/rn_businessName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business name"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/adobe_clean_bold" />

                <TextView
                    android:id="@+id/rn_contactInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="contact info"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:layout_marginTop="@dimen/_5sdp"/>



                <View
                    android:id="@+id/rn_viewOne"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="0.8dp"
                    android:background="@color/black"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/rn_phoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone"/>

                <View
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="0.8dp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/rn_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <View
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="0.8dp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/rn_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <View
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="0.8dp"
                    android:background="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recipient"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#255CCB"
                    android:fontFamily="@font/adobe_clean_regular" />
                <TextView
                    android:id="@+id/rn_recipientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recipient Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference Number"
            android:textSize="@dimen/_10sdp"
            android:textColor="#255CCB"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/rn_refName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the reference number"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_5sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="@dimen/_10sdp"
            android:textColor="#255CCB"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/rn_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the date"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job title"
            android:textSize="@dimen/_10sdp"
            android:textColor="#255CCB"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/rn_jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the job title"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_5sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary of work"
            android:textSize="@dimen/_10sdp"
            android:textColor="#255CCB"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/rn_workSummery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the summary"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_5sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray"
            android:layout_marginTop="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:textSize="@dimen/_10sdp"
            android:textColor="#255CCB"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_8sdp"/>

        <TextView
            android:id="@+id/rn_manValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="monetary value"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/rn_vat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VAT Ex/Incl."
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_marginTop="@dimen/_5sdp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/rn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_30sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:background="@color/color_yellow"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/adobe_clean_regular"
            />

    </LinearLayout>




</LinearLayout>
