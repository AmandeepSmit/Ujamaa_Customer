<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_15sdp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:fitsSystemWindows="true"
    app:behavior_hideable="false"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFBFBF"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_most_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:paddingVertical="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_reply"
                    />
                <TextView
                    android:id="@+id/tv_most_recent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Most Recent"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hightest_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:paddingVertical="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_high_rating"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Highest Rating"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_most_useful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:paddingVertical="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_thumb"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Most Useful"
                    android:fontFamily="@font/adobe_clean_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />



            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/yellow"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/tv_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


</LinearLayout>