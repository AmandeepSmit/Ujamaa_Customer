<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           >
           <TextView
               android:id="@+id/tv_price"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="FREE"
               android:visibility="invisible"
               android:textSize="@dimen/_12sdp"
               android:textColor="#F0403C"
               android:fontFamily="@font/adobe_clean_regular"
               android:layout_marginTop="@dimen/_5sdp"/>
           <TextView
               android:id="@+id/ref_online"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Online event"
               android:textColor="#696666"
               android:textSize="@dimen/_12sdp"
               android:fontFamily="@font/adobe_clean_regular"
               android:paddingVertical="@dimen/_4sdp"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">


           <TextView
               android:id="@+id/fsp_impText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="EVENT"
               android:textColor="@color/black"
               android:layout_gravity="end"
               android:textSize="@dimen/_12sdp"
               android:fontFamily="@font/adobe_clean_regular"
               android:paddingVertical="@dimen/_8sdp"
               android:paddingHorizontal="@dimen/_20sdp"
               android:background="#EFCD47"
               android:layout_alignParentEnd="true"/>
           <TextView
               android:id="@+id/tv_is_subscriber"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="for subscribers only"
               android:layout_marginTop="@dimen/_2sdp"
               android:textSize="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_5sdp"
               android:fontFamily="@font/adobe_clean_bold"
               android:textColor="#341BCA"/>

       </LinearLayout>
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/_10sdp">
               <androidx.cardview.widget.CardView
                   android:layout_width="wrap_content"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/event_img"
                       android:layout_width="@dimen/_70sdp"
                       android:layout_height="@dimen/_60sdp"
                       android:src="@drawable/ic_user_two"/>
               </androidx.cardview.widget.CardView>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:layout_marginStart="@dimen/_10sdp">
                   <TextView
                       android:id="@+id/rev_title"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Event Title"
                       android:textSize="@dimen/_16sdp"
                       android:fontFamily="@font/adobe_clean_bold"
                       android:textColor="@color/black"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center_vertical"
                       >
                       <TextView
                           android:id="@+id/tv_date_time"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Tue, Sep 15 7:30 pm"
                           android:textColor="#FF914D"
                           android:layout_marginRight="@dimen/_10sdp"
                           android:textSize="@dimen/_12sdp"
                           android:fontFamily="@font/adobe_clean_regular"/>
                       <TextView
                           android:id="@+id/tv_min_age"
                           android:layout_width="@dimen/_26sdp"
                           android:layout_height="@dimen/_26sdp"
                           android:text="21+"
                           android:textColor="@color/white"
                           android:textSize="@dimen/_10sdp"
                           android:fontFamily="@font/adobe_clean_regular"
                           android:background="@drawable/back_circle"
                           android:padding="@dimen/_4sdp"
                           android:gravity="center"
                           />
                   </LinearLayout>


               </LinearLayout>

               <ImageView
                   android:id="@+id/img_menu"
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_30sdp"
                   android:src="@drawable/ic_more"
                   android:padding="@dimen/_7sdp"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tv_desc"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_4sdp"
                   android:ellipsize="end"
                   android:textColor="@color/black"
                   android:fontFamily="@font/adobe_clean_regular"
                   />
               <TextView
                   android:id="@+id/tv_read_more"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:text="read more"
                   android:visibility="gone"
                   android:layout_gravity="bottom"
                   android:fontFamily="@font/adobe_clean_bold"
                   />
           </LinearLayout>


           <TextView
               android:id="@+id/tv_location"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="London (exact location not available yet)"
               android:textColor="@color/quantum_grey"
               android:textSize="@dimen/_12sdp"
               android:fontFamily="@font/adobe_clean_regular"
               android:paddingVertical="@dimen/_3sdp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/tv_hash_tag"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:fontFamily="@font/adobe_clean_regular"
                   android:text="#hashtag"
                   android:textColor="@color/quantum_grey"
                   android:textSize="@dimen/_12sdp"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="end"
                   android:layout_marginBottom="@dimen/_5sdp">
                   <ImageView
                       android:id="@+id/img_share"
                       android:layout_width="@dimen/_24sdp"
                       android:layout_height="@dimen/_24sdp"
                       android:src="@drawable/ic_share"
                       android:padding="@dimen/_3sdp"
                       />

                   <ImageView
                       android:id="@+id/img_like"
                       android:layout_width="@dimen/_24sdp"
                       android:layout_height="@dimen/_24sdp"
                       android:src="@drawable/ic_heart"
                       android:layout_marginLeft="@dimen/_10sdp"
                       app:tint="@color/black"
                       android:padding="@dimen/_3sdp"/>
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>

       <ImageView
           android:layout_width="@dimen/_20sdp"
           android:layout_height="@dimen/_24sdp"
           android:src="@drawable/ic_arrow_forward"
           android:layout_gravity="center"
           android:layout_marginRight="@dimen/_5sdp"
           app:tint="@color/color_gray_text"
           android:padding="@dimen/_3sdp"/>


   </LinearLayout>
</LinearLayout>