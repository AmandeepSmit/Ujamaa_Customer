<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileFilterActivity"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#C4AA44"
        android:paddingVertical="@dimen/_5sdp"
        >
        <TextView
            android:id="@+id/ec_cancel"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:onClick="resetBtnClick"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/adobe_clean_regular"
            android:layout_gravity="bottom"
            android:textSize="@dimen/_12sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:fontFamily="@font/adobe_clean_bold"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_20sdp"/>
        <TextView
            android:id="@+id/ec_save"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:onClick="applyBtnClick"
            android:gravity="center"
            android:fontFamily="@font/adobe_clean_bold"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#1B1717"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/laout_post_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TYPE OF POST"
            android:fontFamily="@font/glacial_regular"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="#696666"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_discount_deals"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_1sdp"
                android:paddingVertical="@dimen/_7sdp"
                android:gravity="center"
                android:text="Discount\n\u0026 deals"
                android:layout_marginVertical="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_general_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_1sdp"
                android:paddingVertical="@dimen/_7sdp"
                android:gravity="center"
                android:text="General\nInformation"
                android:layout_marginVertical="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_important_updates"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_1sdp"
                android:paddingVertical="@dimen/_7sdp"
                android:gravity="center"
                android:text="Important\nUpdates"
                android:layout_marginVertical="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>



    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CATEGORIES"
        android:fontFamily="@font/glacial_regular"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_12sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:textColor="#696666"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#BBBBBB">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_profile_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:spanCount="2"
            tools:listitem="@layout/row_profile_filter"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            />


    </LinearLayout>
</LinearLayout>