<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/adobe_clean_bold"
        android:gravity="center"
        android:text="Reset"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_18sdp" />

    <TextView
        android:id="@+id/dr_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/adobe_clean_regular"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:lineSpacingExtra="@dimen/_7sdp"
        android:text="Are you sure you want to reset? This will delete all the information you entered in this entire section. You cannot undo this decision."
        android:textColor="#000000"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_weight="1"
            android:background="#EBEBEB"
            android:fontFamily="@font/adobe_clean_regular"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_weight="1"
            android:background="#F0403C"
            android:fontFamily="@font/adobe_clean_regular"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Reset"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>

</LinearLayout>
