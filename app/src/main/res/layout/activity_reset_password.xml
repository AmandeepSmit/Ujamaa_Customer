<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C4AA44"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:gravity="center"
            android:text="Change password"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal">

<!--            <TextView-->
<!--                android:id="@+id/cp_cancel"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_marginStart="@dimen/_10sdp"-->
<!--                android:fontFamily="@font/adobe_clean_regular"-->
<!--                android:gravity="start"-->
<!--                android:text="Cancel"-->
<!--                android:textColor="@android:color/black"-->
<!--                android:textSize="@dimen/_12sdp"-->
<!--                android:padding="@dimen/_4sdp"/>-->

            <TextView
                android:id="@+id/rp_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/adobe_clean_regular"
                android:text="Save"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_4sdp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cp_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/adobe_clean_regular"
        android:textColor="#5B5B5B"
        android:textSize="@dimen/_12sdp"
        android:layout_margin="@dimen/_12sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <EditText
        android:id="@+id/rp_newPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New password"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/adobe_clean_regular"
        android:textColor="@color/black"
        android:textColorHint="#5B5B5B"
        android:background="@color/white"
        android:padding="@dimen/_14sdp"
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <EditText
        android:id="@+id/rp_confirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm new password"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/adobe_clean_regular"
        android:textColorHint="#5B5B5B"
        android:background="@color/white"
        android:padding="@dimen/_14sdp"
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

</LinearLayout>