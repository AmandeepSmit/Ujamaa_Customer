<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_5sdp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is UJAMAA Online Black-owned?"
            android:fontFamily="@font/adobe_clean_bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Yes. UJAMAA Online was founded by two Black women from London."
            android:fontFamily="@font/adobe_clean_regular"
            android:lineSpacingExtra="@dimen/_8sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"/>

    </LinearLayout>

</LinearLayout>