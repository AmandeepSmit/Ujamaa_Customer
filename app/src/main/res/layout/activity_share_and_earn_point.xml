<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context=".activities.ShareAndEarnPointActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C4AA44"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hl_back"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/_8sdp"
            android:onClick="backBtnCick"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36sdp"
            android:fontFamily="@font/adobe_clean_regular"
            android:gravity="center"
            android:paddingVertical="@dimen/_14sdp"
            android:text="Share and Earn Points"
            android:textColor="#000000"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Points:"
                android:fontFamily="@font/adobe_clean_regular"
                android:textSize="@dimen/_25sdp"
                />

            <TextView
                android:id="@+id/se_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/adobe_clean_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5B5B5B"

            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:letterSpacing="0.1"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Invite friends to join the UJAMAA Online community and earn points! You earn points when they download the app. Your points will count towards a future rewards program."
            android:fontFamily="@font/adobe_clean_regular"
            />

        <TextView
            android:id="@+id/se_shareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFCD47"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_9sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:text="Share the UJAMAA Online App"
            android:fontFamily="@font/adobe_clean_regular"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#5B5B5B"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            />

        <TextView
            android:id="@+id/se_msgText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5B5B5B"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:letterSpacing="0.1"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text=""
            android:fontFamily="@font/adobe_clean_regular"
            />

        <TextView
            android:id="@+id/se_inviteBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFCD47"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_9sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:text="Invite businesses to UJAMAA Online"
            android:fontFamily="@font/adobe_clean_regular"
            />

    </LinearLayout>


</LinearLayout>